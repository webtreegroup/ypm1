{
  "compileOnSave": true, 
  "compilerOptions": {
    "module": "esnext",
    "rootDir": ".",
    "outDir": "./static/js",
    "baseUrl": ".",
    "lib": ["es5", "es6", "es2015.promise", "es2016.array.include"],
    "alwaysStrict": true, 
    "noEmitOnError": true, 
    "noUnusedLocals": true, 
    "noUnusedParameters": true, 
    "noImplicitUseStrict": false, 
    "pretty": true, 
    "removeComments": true, 
    "sourceMap": true, 
    "strict": true, 
    "target": "es6", 
    "watch": true, 
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "charset": "utf8", 
  },
  "include": ["."]
}
