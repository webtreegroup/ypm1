{
  "name": "ypm1",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "scss": "node-sass --output-style expanded -o static/css src/scss",
    "autoprefixer": "postcss -u autoprefixer -r static/css/*",
    "build:css": "npm run scss && npm run autoprefixer",
    "build:js": "",
    "build:all": "npm run build:css && npm run build:js",
    "watch:css": "onchange \"src/scss/*.scss\" -- npm run build:css",
    "watch:js": "onchange \"src/js/*.js\" -- npm run build:js",
    "server": "browser-sync start --server 'static' --files 'static'",
    "start": "npm-run-all --parallel server watch:css watch:js"
  },
  "author": "web-tree@yandex.ru",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.0.1",
    "browser-sync": "^2.26.13",
    "express": "^4.17.1",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.1.6",
    "postcss-cli": "^8.2.0"
  },
  "dependencies": {
    "pug": "^3.0.0"
  }
}
